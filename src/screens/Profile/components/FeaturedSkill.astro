---
interface Props {
  title: string;
  experience: string;
  abilities: readonly string[];
}

const { title, experience, abilities } = Astro.props;
---

<div
  class="rounded border-l border-t border-r border-b-2 border-gray-600 p-2 divide-y divide-gray-600"
>
  <h2 class="text-xl px-2 pb-2">{title}</h2>
  <p class="p-2">使用経験: {experience}</p>
  <div class="p-2">
    <h3>具体的な応用例</h3>
    <ul class="list-disc list-outside pl-6">
      {abilities.map((ab) => <li>{ab}</li>)}
    </ul>
  </div>
</div>
