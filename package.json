{
  "name": "whiteluckbringers-site-2",
  "private": true,
  "scripts": {
    "build:server": "esbuild --bundle ./server/gridsome.server.ts --outfile=./server/dist/index.js --minify --platform=node --external:express",
    "build": "pnpm build:server && gridsome build",
    "serve": "pnpm build:server && gridsome develop",
    "serve:static": "pnpm build && serve ./dist/",
    "optimize": "pnpm optimize:contents-images",
    "optimize:contents-images": "ts-node -P ./scripts/tsconfig.json ./scripts/OptimizeImages.ts",
    "explore": "gridsome explore",
    "lint": "eslint ./src/**/*.{vue,ts}",
    "lint:fix": "pnpm lint -- --fix",
    "format": "prettier --write ./src/**/*.{vue,ts}",
    "fix:all": "pnpm format && pnpm lint:fix",
    "get:licenses": "license-checker --json",
    "preinstall": "npx only-allow pnpm",
    "prebuild": "test \"$CI\" = true && npx pnpm install --store=node_modules/.pnpm-store || echo skiping pnpm install"
  },
  "dependencies": {
    "@vue/composition-api": "^1.0.0-beta.22",
    "gridsome": "^0.7.21",
    "vue-i18n": "^8.21.1",
    "vue-i18n-composable": "^0.2.1",
    "vue-meta": "^2.4.0"
  },
  "devDependencies": {
    "@gridsome/source-filesystem": "^0.6.2",
    "@gridsome/transformer-remark": "^0.6.2",
    "@tailwindcss/postcss7-compat": "^2.0.2",
    "@types/express": "^4.17.9",
    "@types/fs-extra": "^9.0.6",
    "@types/js-yaml": "^3.12.5",
    "@types/klaw": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "@vue/eslint-config-typescript": "^7.0.0",
    "autoprefixer": "^9",
    "esbuild": "^0.8.26",
    "eslint": "^7.16.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-vue": "^7.4.0",
    "express": "^4.17.1",
    "fs-extra": "^9.0.1",
    "gridsome-plugin-typescript": "^0.4.0",
    "js-yaml": "^3.14.0",
    "klaw": "^3.0.0",
    "license-checker": "^25.0.1",
    "pnpm": "^5.14.1",
    "postcss": "^7",
    "postcss-loader": "^3.0.0",
    "prettier": "^2.1.2",
    "tailwindcss": "npm:@tailwindcss/postcss7-compat@^2.0.2",
    "ts-loader": "^8.0.12",
    "ts-node": "^9.0.0",
    "typescript": "^4.1.3",
    "vue-router": "^3.4.3"
  }
}
