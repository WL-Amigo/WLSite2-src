{
  "$schema": "http://json-schema.org/draft-07/schema",
  "$id": "work.json",
  "title": "Work",
  "description": "作品情報",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "publishDate": {
      "type": "string",
      "pattern": "^\\d{4}-\\d{2}$"
    },
    "state": {
      "type": "string",
      "enum": [
        "ongoing",
        "discontinued"
      ]
    },
    "url": {
      "type": "string",
      "pattern": "^http"
    },
    "github": {
      "type": "string",
      "pattern": "^https://github\\.com/.+"
    },
    "category": {
      "type": "string",
      "enum": [
        "website",
        "webapp",
        "desktopapp"
      ]
    },
    "technologies": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "earnedExperiences": {
      "type": "array",
      "description": "得られた経験",
      "items": {
        "type": "string"
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "label": {
            "type": "string"
          },
          "url": {
            "type": "string",
            "pattern": "^(http|/)"
          }
        },
        "required": ["label", "url"]
      }
    },
    "functionalities": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "improvements": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "impact": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  },
  "required": [
    "id",
    "title",
    "publishDate",
    "category",
    "technologies",
    "description",
    "functionalities",
    "improvements",
    "impact",
    "earnedExperiences"
  ]
}